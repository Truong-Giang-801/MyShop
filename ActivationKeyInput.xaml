<Window x:Class="MyShop.ActivationKeyInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyShop"
        mc:Ignorable="d"
        Title="Activation Key Input" Height="250" Width="494">
    <Canvas Name="Activation" Width="442" HorizontalAlignment="Center" Margin="0,-10,0,6">
        <Label Content="Activation Key:" FontSize="20" FontWeight="Bold" BorderThickness="0" Canvas.Left="10" Canvas.Top="38"/>
        <TextBox x:Name="ActivationKey" Style="{StaticResource searchTextbox}" Width="400" Height="43" Canvas.Left="21" Canvas.Top="98" HorizontalAlignment="Center"/>
        <Button x:Name="Submit" IsDefault="True" Click="Submit_Click" Content="Submit" Height="30" Width="100" Canvas.Left="21" Canvas.Top="168" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button x:Name="Cancel" IsCancel="False" Click="Cancel_Click" Content="Cancel" Width="100" Height="30" Canvas.Left="321" Canvas.Top="168" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Canvas>
</Window>
