<UserControl x:Class="MyShop.VersionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyShop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel x:Name="productVersionStackPanel" VerticalAlignment="Center" Margin="0,0,100,0" Visibility="Collapsed">
            <TextBlock x:Name="titleTextBlock" Style="{StaticResource titleText}" FontSize="26" FontWeight="Bold" Height="31"/>
            <TextBlock x:Name="messageTextBlock" Text="(this place show how much day left) day(s) left" Foreground="#6C879A" Height="27"/>
        </StackPanel>
</UserControl>
